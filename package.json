{
  "name": "prayer-app",
  "version": "1.0.0",
  "description": "Prayer & Praise App - Cross-platform prayer and praise tracking",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "install:all": "npm install && npm run install:packages",
    "install:packages": "npm install --workspace=packages/shared && npm install --workspace=packages/web && npm install --workspace=packages/mobile && npm install --workspace=packages/desktop",
    "web:start": "npm run start --workspace=packages/web",
    "web:build": "npm run build --workspace=packages/web",
    "web:test": "npm run test --workspace=packages/web",
    "web:lint": "npm run lint --workspace=packages/web",
    "mobile:start": "npm run start --workspace=packages/mobile",
    "mobile:ios": "npm run ios --workspace=packages/mobile",
    "mobile:android": "npm run android --workspace=packages/mobile",
    "mobile:clean": "npm run clean --workspace=packages/mobile",
    "mobile:pod-install": "npm run pod-install --workspace=packages/mobile",
    "desktop:start": "npm run start --workspace=packages/desktop",
    "desktop:dev": "npm run dev --workspace=packages/desktop",
    "desktop:build": "npm run build --workspace=packages/desktop",
    "desktop:dist": "npm run dist --workspace=packages/desktop",
    "desktop:dist:win": "npm run dist:win --workspace=packages/desktop",
    "desktop:dist:mac": "npm run dist:mac --workspace=packages/desktop",
    "desktop:dist:linux": "npm run dist:linux --workspace=packages/desktop",
    "shared:build": "echo 'Shared package is ready to use'",
    "clean": "npm run clean --workspaces --if-present",
    "build": "npm run shared:build && npm run web:build",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present"
  },
  "keywords": [
    "prayer",
    "praise",
    "pwa",
    "react-native",
    "electron",
    "cross-platform"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "rimraf": "^5.0.0"
  },
  "engines": {
    "node": ">=16",
    "npm": ">=8"
  },
  "overrides": {
    "glob": "^10.4.5"
  },
  "dependencies": {}
}
