{
  "name": "@prayer-app/desktop",
  "version": "1.0.0",
  "description": "Prayer & Praise Desktop App",
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run start-web\" \"wait-on http://localhost:3000 && electron .\"",
    "start-web": "cd ../web && npm start",
    "build": "npm run build-web && npm run build-electron",
    "build-web": "cd ../web && npm run build",
    "build-electron": "electron-builder",
    "dist": "npm run build",
    "dist:win": "npm run build-web && electron-builder --win",
    "dist:mac": "npm run build-web && electron-builder --mac",
    "dist:linux": "npm run build-web && electron-builder --linux",
    "pack": "npm run build-web && electron-builder --dir",
    "pack:win": "npm run build-web && electron-builder --dir --win",
    "pack:mac": "npm run build-web && electron-builder --dir --mac",
    "pack:linux": "npm run build-web && electron-builder --dir --linux",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": ["prayer", "praise", "desktop", "electron"],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "28.3.3",
    "electron-builder": "^24.9.1",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.prayerapp.desktop",
    "productName": "Prayer & Praise",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "../web/build/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "../web/build",
        "to": "app"
      }
    ],
    "mac": {
      "category": "public.app-category.lifestyle",
      "icon": "assets/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ]
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        },
        {
          "target": "rpm",
          "arch": ["x64"]
        }
      ],
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
} 